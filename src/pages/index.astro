---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'Astro', url: 'https://astro.build/' },
  { name: 'Rust', url: 'https://www.rust-lang.org/' },

  { name: 'ESP-32', },
  { name: 'C/Cpp'},
  { name: 'Reverse Engineering'},

  { name: 'React', url: 'https://reactjs.org' },
  { name: 'React Native', },
  { name: 'Python', url: 'https://python.org' },
  { name: 'Typescript', url: 'https://www.typescriptlang.org/' },
];
---

<Layout
  title='Home'
  pageTitle='Conner Replogle |Â Home'
  description='Programmer, Hacker and Maker of things. I write about programming, hacking, and making things.'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Conner Replogle</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
             Computer Engineering Student
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
               at University of Texas at Dallas
            </p>
            <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Tinkerer of things involving
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Who Is Conner Replogle?
          </h2>
          <p class='poppins'>
            From programming to hacking, I love to make things and tinker. I'm always looking for new projects to work on and new things to learn.


          </p>
        </Card>
      </div>
      <div class='col-span-4'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            What is Conner Replogle up to?
          </h2>
          <p class='poppins'>
            Currently working on a Habit Tracking App, Getting ready for my next semester at UTD, and working on a few client projects.


          </p>
        </Card>
      </div>
      <div class='col-span-3'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
           How can I contact Conner Replogle?
          </h2>
          <p class='poppins'>
            You can reach me at
            <a
              href='mailto:conner@replogle.dev'>
              conner@replogle.dev
            </a>


          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
